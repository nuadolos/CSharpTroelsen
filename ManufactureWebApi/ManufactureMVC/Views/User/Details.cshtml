@model ManufactureEF.Entities.User

@using ManufactureEF.Entities
@using ManufactureEF.Repos
@functions
{
    public string RoleNameUser(User user)
    {
        using (RoleRepo _repo = new RoleRepo())
        {
            return _repo.GetOne(user.RoleId).Name;
        }
    }
}

